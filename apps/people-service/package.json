{
  "name": "people-service",
  "version": "0.0.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "start:test": "node --enable-source-maps dist/main.js",
    "db:generate": "prisma generate --schema prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema prisma/schema.prisma",
    "db:deploy": "prisma migrate deploy --schema prisma/schema.prisma",
    "prebuild": "prisma generate --schema prisma/schema.prisma",
    "pretest": "prisma generate --schema prisma/schema.prisma",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:unit": "vitest run --dir src/validation",
    "test:integration": "vitest run --dir test/integration",
    "test:e2e": "vitest run --dir test/e2e"
  },
  "dependencies": {
    "@prisma/client": "^6.19.1",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "prisma": "^6.19.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
